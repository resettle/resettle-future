{
  "name": "@services/app",
  "private": true,
  "type": "module",
  "scripts": {
    "typegen": "dotenvx-cloudflare run -f ../../.env -e 'DOTENV_|VITE_' -- wrangler types --config wrangler.toml",
    "typegen:staging": "dotenvx-cloudflare run -f ../../.env.staging -e 'DOTENV_|VITE_' -- wrangler types --config wrangler.staging.toml",
    "typegen:production": "dotenvx-cloudflare run -f ../../.env.production -e 'DOTENV_|VITE_' -- wrangler types --config wrangler.production.toml",
    "dev": "dotenvx-cloudflare run -f ../../.env -e 'DOTENV_|VITE_' -- wrangler dev --config wrangler.toml --port 3000 --inspector-port 9240",
    "deploy:staging": "dotenvx run -f ../../.env.staging --overload -- wrangler deploy --config wrangler.staging.toml",
    "deploy:production": "dotenvx run -f ../../.env.production --overload -- wrangler deploy --config wrangler.production.toml",
    "secrets:staging": "dotenvx-cloudflare sync -f ../../.env.staging -e 'DOTENV_|VITE_' -n resettle-staging-service-global",
    "secrets:production": "dotenvx-cloudflare sync -f ../../.env.production -e 'DOTENV_|VITE_' -n resettle-production-service-global"
  },
  "dependencies": {
    "hono": "4.10.4"
  },
  "devDependencies": {
    "@types/node": "24.10.0",
    "typescript": "5.9.3"
  }
}
